<!-- ユーザーの詳細 -->
<div>
  <h3><%= @user.name %></h3>
  <% if @user.profile_image.attached? %>
    <%= image_tag @user.get_profile_image(100, 100) %>
     <p><%= link_to "プロフィール編集", edit_path %></p>
  <% else %>
    <%= image_tag 'sample-author1.jpg', width: 100, height: 100 %>
  <% end %>
</div>
<%= render 'list', post_images: @post_images %>